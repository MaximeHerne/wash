<div class="container">
  <div class="row">
    <div class="col-xs-5">
      <h2>Compl√©ter mon profil</h2>

      <%= bootstrap_form_for(@profile) do |f| %>

        <%= f.text_field :first_name, autofocus: true %>
        <%= f.text_field :last_name, autocomplete: "off" %>
        <%= f.text_field :phone, autocomplete: "off" %>
        <%= f.text_field :address, autocomplete: "off" %>
        <%= f.text_field :locality, autocomplete: "off" %>
        <%= f.text_field :postal_code, autocomplete: "off" %>
        <%= f.submit "Update" %>

        <%= link_to "Change your password", edit_user_registration_path(@profile) %>
      <% end %>


    </div>
  </div>
</div>


