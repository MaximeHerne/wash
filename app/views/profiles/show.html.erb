<%= render 'layouts/form_wrapper_beginning' %>

  <h1>Profil de <%= @profile.first_name %> </h1>

  <ul>
    <li> Vous êtes <%= @profile.last_name %> <%= @profile.first_name %> </li>
    <li> Votre téléphone est le <%= @profile.phone %> </li>
    <li> Votre adresse est : <%= @profile.address %> </li>
    <li> Votre ville est : <%= @profile.locality %> </li>
    <li> Votre code postal est  : <%= @profile.postal_code %> </li>
  </ul>

  <%= link_to 'Editez votre profil', edit_profile_path(@profile), class: "btn btn-danger" %>
  <%= link_to 'Faite votre machine', root_path, class: "btn btn-primary" %>

<%= render 'layouts/form_wrapper_end' %>